{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "declaration": false,
        "pretty": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "typeRoots": [
        "./node_modules/@types/"
    ],
    "include": [
        "./**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}